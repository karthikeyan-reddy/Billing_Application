@model ShoppingApp.Models.Register



<div style="color:aliceblue; margin-top:5%">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div id="form">

            <div>First Name</div>
            <div>@Html.TextBoxFor(m => m.user.FirstName, new { @class = "form-control" })</div>

            <div>LastName</div>
            <div>@Html.TextBoxFor(m => m.user.LastName, new { @class = "form-control" })</div>

            <div>BusinessName</div>
            <div>@Html.TextBoxFor(m => m.user.BusinessName, new { @class = "form-control" })</div>


            <div>UserName</div>
            <div>@Html.TextBoxFor(m => m.user.UserName, new { @class = "form-control" })</div>
            <div>@Html.ValidationMessageFor(m => m.user.UserName)</div>

            <div>Password</div>
            <div>@Html.TextBoxFor(m => m.user.Password, new { @class = "form-control", @type = "password" })</div>
            <div>@Html.ValidationMessageFor(m => m.user.Password)</div>



            <div>
                <input type="submit" value="Login" class="btn btn-success" />
                @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
</div>